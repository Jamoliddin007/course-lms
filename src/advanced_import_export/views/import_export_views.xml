<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_advanced_import_export_form" model="ir.ui.view">
        <field name="name">advanced.import.export.form</field>
        <field name="model">advanced.import.export</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_export" string="Export" type="object"
                            class="btn-primary" invisible="operation != 'export'"/>
                    <button name="action_import" string="Import" type="object"
                            class="btn-primary" invisible="operation != 'import'"/>
                </header>
                <sheet>
                    <group>
                        <field name="operation" widget="radio"/>
                        <field name="model_id"/>
                        <field name="model_name" invisible="1"/>
                    </group>

                    <group invisible="operation != 'export'">
                        <group>
                            <field name="include_id"/>
                            <field name="multi_lang"/>
                            <field name="lang_ids" widget="many2many_tags"
                                   invisible="not multi_lang"/>
                        </group>
                        <group>
                            <field name="export_data" filename="export_filename"/>
                            <field name="export_filename" invisible="1"/>
                        </group>
                    </group>

                    <group invisible="operation != 'import'">
                        <field name="import_data" filename="import_filename"/>
                        <field name="import_filename" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_advanced_import_export_list" model="ir.ui.view">
        <field name="name">advanced.import.export.list</field>
        <field name="model">advanced.import.export</field>
        <field name="arch" type="xml">
            <list>
                <field name="operation"/>
                <field name="model_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_advanced_import_export" model="ir.actions.act_window">
        <field name="name">Import/Export</field>
        <field name="res_model">advanced.import.export</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_advanced_import_export"
              name="Import/Export"
              action="action_advanced_import_export"
              sequence="99"/>

</odoo>