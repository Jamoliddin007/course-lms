<odoo>
    <record id="view_education_course_list" model="ir.ui.view">
        <field name="name">education_course.list</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <list string="Course">
                <field name="duration"/>
                <field name="duration_uom"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_education_course_form" model="ir.ui.view">
        <field name="name">education_course.form</field>
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="duration"/>
                        <field name="duration_uom"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_education_course" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">education.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_education_course" name="Course" action="action_education_course"/>
</odoo>
